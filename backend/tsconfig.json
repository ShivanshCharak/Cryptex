{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "target": "es2016",                                  
    "module": "nodenext",                                
    "moduleResolution": "nodenext",
    "rootDir": "./src",                                  
    "paths": {
      "@repo/postgres-prisma":["../postgres-prisma/dist"]
    },                                      
    "outDir": "./dist",                              
"esModuleInterop": true,                             
    
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    
    "skipLibCheck": true,                                 
    
    
  },
  "include": ["src","types"],
  "exclude": ["node_modules", "dist"]
  
}
